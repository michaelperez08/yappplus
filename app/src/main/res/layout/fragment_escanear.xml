        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/textView15"
        android:id="@+id/textView14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintHorizontal_bias="0.102"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="70dp"
        android:layout_height="15dp"
        android:text="Tiquetes Vendidos"
        android:textSize="7dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/textView15"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="70dp"
        android:layout_height="15dp"
        android:text="Escaneados"
